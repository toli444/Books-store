// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id      Int    @id @default(autoincrement())
  name    String
  author  Autor  @relation(fields: [autorId], references: [id])
  autorId Int
}

model Autor {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

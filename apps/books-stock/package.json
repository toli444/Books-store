{
  "name": "books-stock",
  "version": "1.0.0",
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf ./dist",
    "serve": "node dist/index.js",
    "dev": "nodemon",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:db:start": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:stop": "docker-compose -f docker-compose.test.yml down",
    "test:db:migrate": "dotenv -e .env.test npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "test:db:reset": "dotenv -e .env.test npx prisma migrate reset -- --force -- --skip-seed",
    "test:db:gui": "dotenv -e .env.test npx prisma studio",
    "db:migrate": "npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "db:push": "npx prisma db push",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:gui": "npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "5.4.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "fast-csv": "^4.3.6",
    "inversify": "^6.0.2",
    "jsonwebtoken": "^9.0.2",
    "lodash.omit": "^4.5.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.5",
    "@types/bcryptjs": "^2.4.5",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.7",
    "@types/lodash.omit": "^4.5.8",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.6",
    "@types/passport": "^1.0.14",
    "@types/passport-jwt": "^3.0.12",
    "@types/supertest": "^2.0.15",
    "dotenv-cli": "^7.3.0",
    "eslint-plugin-jest": "^27.6.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.4.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}

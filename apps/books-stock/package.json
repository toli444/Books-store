{
  "name": "books-stock",
  "version": "1.0.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=7.5.1"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./dist",
    "serve": "node dist/index.js",
    "dev": "nodemon",
    "test": "jest",
    "db:migrate": "npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "db:push": "npx prisma db push",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down"
  },
  "dependencies": {
    "@prisma/client": "5.4.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^18.12.5",
    "@types/express": "^4.17.19",
    "@types/node": "^20.8.6",
    "nodemon": "^3.0.1",
    "prisma": "^5.4.2",
    "ts-node": "^10.9.1"
  }
}
